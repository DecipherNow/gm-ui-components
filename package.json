{
  "name": "gm-ui-components",
  "version": "0.4.5",
  "description":
    "A library of reusable UI components for the Grey Matter product suite.",
  "main": "lib/build.js",
  "author": "Decipher Technology Studios",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:DecipherNow/gm-ui-components.git"
  },
  "files": ["lib"],
  "dependencies": {
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "^1.1.4",
    "react-test-renderer": "^16.2.0",
    "styled-components": "^3.2.5"
  },
  "scripts": {
    "build": "webpack -p",
    "build-storybook": "build-storybook -s public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "deploy-storybook": "storybook-to-ghpages",
    "junit-merge": "junit-merge",
    "lint-js": "node ./node_modules/eslint/bin/eslint 'src'",
    "preversion": "npm test",
    "version": "git add -A",
    "prepublishonly": "npm run build",
    "postpublish": "npm run deploy-storybook",
    "start": "start-storybook -p 9009 -s public",
    "test": "node scripts/test.js --env=jsdom",
    "update-deps": "npm-check . --skip-unused -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.5",
    "@commitlint/config-conventional": "^6.0.4",
    "@storybook/addon-actions": "^3.3.10",
    "@storybook/addon-info": "^3.3.10",
    "@storybook/addon-knobs": "^3.3.10",
    "@storybook/addon-links": "^3.3.10",
    "@storybook/addon-options": "^3.3.10",
    "@storybook/react": "^3.3.10",
    "@storybook/storybook-deployer": "^2.2.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "conventional-changelog-cli": "^1.3.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.4.0",
    "jest-cli": "^22.4.2",
    "jest-junit": "^3.6.0",
    "jest-styled-components": "^4.11.0-1",
    "junit-merge": "^1.3.0",
    "npm-check": "^5.5.2",
    "prettier": "^1.10.2",
    "raf": "^3.4.0",
    "react-addons-test-utils": "^15.6.2",
    "webpack": "^3.10.0"
  },
  "peerDependencies": {
    "styled-components": "^3"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "jest-junit": {
    "suiteName": "gm-ui-components",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "collectCoverageFrom": ["src/components/**/*.{js,jsx}"],
    "coverageReporters": ["lcov"],
    "setupFiles": ["raf/polyfill", "<rootDir>/config/setupTests.js"],
    "setupTestFrameworkScriptFile":
      "<rootDir>/config/jestSetupTestFramework.js",
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleDirectories": ["node_modules", "<rootDir>/src"],
    "moduleFileExtensions": ["web.js", "js", "json", "web.jsx", "jsx"]
  },
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
