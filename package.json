{
  "name": "gm-ui-components",
  "version": "0.2.0",
  "description":
    "A library of reusable UI components for the Grey Matter product suite.",
  "main": "lib/build.js",
  "author": "Decipher Technology Studios",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:DecipherNow/gm-ui-components.git"
  },
  "files": ["lib"],
  "dependencies": {
    "polished": "^1.7.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-responsive": "^1.3.4",
    "react-scripts": "1.0.13",
    "react-test-renderer": "^16.0.0",
    "styled-components": "^2.1.2"
  },
  "scripts": {
    "start": "webpack -w",
    "build": "webpack -p",
    "test": "jest --watchAll",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "prepublishonly": "npm run build"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.10",
    "@storybook/addon-info": "^3.2.11",
    "@storybook/addon-knobs": "^3.2.10",
    "@storybook/addon-links": "^3.2.10",
    "@storybook/react": "^3.2.10",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "jest-styled-components": "^4.6.0",
    "prettier": "^1.7.4",
    "raf": "^3.4.0",
    "react-addons-test-utils": "^15.6.2",
    "webpack": "^3.6.0"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/config/setupTests.js",
    "unmockedModulePathPatterns": ["react", "enzyme", "jest-enzyme"],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|ttf)$": "<rootDir>/config/emptyModule.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "setupFiles": ["raf/polyfill"]
  },
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0"
  },
  "publishConfig": {
    "registry": "http://34.206.52.14:4873"
  }
}
