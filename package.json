{
  "name": "gm-ui-components",
  "version": "0.4.7-alpha.10",
  "description": "A library of reusable UI components for the Grey Matter product suite.",
  "main": "lib/build.js",
  "author": "Decipher Technology Studios",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:DecipherNow/gm-ui-components.git"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3",
    "styled-components": "^3"
  },
  "dependencies": {
    "polished": "^1.9.2"
  },
  "scripts": {
    "build": "webpack -p",
    "build-storybook": "build-storybook -s public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "deploy-storybook": "storybook-to-ghpages",
    "junit-merge": "junit-merge",
    "lint-js": "node ./node_modules/eslint/bin/eslint 'src'",
    "preversion": "CI=true npm test",
    "version": "git add -A",
    "postversion": "npm run changelog",
    "prepublishonly": "npm run build",
    "postpublish": "npm run deploy-storybook",
    "start": "webpack -w",
    "storybook": "start-storybook -p 9009 -s public",
    "test": "node scripts/test.js --env=jsdom",
    "update-deps": "npm-check . --skip-unused -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@storybook/addon-actions": "^3.4.6",
    "@storybook/addon-info": "^3.4.6",
    "@storybook/addon-knobs": "^3.4.6",
    "@storybook/addon-links": "^3.4.6",
    "@storybook/addon-options": "^3.4.6",
    "@storybook/react": "^3.4.6",
    "@storybook/storybook-deployer": "^2.3.0",
    "autoprefixer": "^8.6.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "conventional-changelog-cli": "^2.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "jest-junit": "^5.0.0",
    "jest-styled-components": "^5.0.1",
    "junit-merge": "^1.3.0",
    "npm-check": "^5.7.1",
    "prettier": "^1.13.4",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-test-renderer": "^16.4.0",
    "styled-components": "^3.3.2",
    "webpack": "^3.10.0"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest-junit": {
    "suiteName": "gm-ui-components",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "scripts/",
      "lib/",
      ".js.snap",
      ".stories.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/config/setupTests.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jestSetupTestFramework.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  },
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ]
}
