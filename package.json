{
  "name": "gm-ui-components",
  "version": "1.4.4",
  "description": "A library of reusable UI components for the Grey Matter product suite.",
  "main": "lib/build.js",
  "author": "Decipher Technology Studios",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:greymatter-io/gm-ui-components.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "react",
    "gm-ui-components",
    "Grey Matter"
  ],
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16",
    "styled-components": "^4",
    "inter-ui": "^3",
    "react-popper": "^2",
    "@popperjs/core": "^2"
  },
  "dependencies": {
    "polished": "^3.4.2"
  },
  "scripts": {
    "build": "webpack -p",
    "build-storybook": "build-storybook -s public",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "deploy-storybook": "storybook-to-ghpages",
    "format": "prettier --write 'src/**/*.{js,jsx}'",
    "generate-component": "node scripts/generateComponent",
    "junit-merge": "junit-merge",
    "lint-js": "node ./node_modules/eslint/bin/eslint 'src'",
    "preversion": "CI=true npm test",
    "version": "npm run changelog && git add -A",
    "postversion": "git push --tags",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run deploy-storybook",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 9009 -s public",
    "test": "node scripts/test.js --env=jsdom",
    "update-deps": "npm-check . --skip-unused -u",
    "update:snapshots": "npm run test -- --updateSnapshot"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@popperjs/core": "^2.5.4",
    "@storybook/addon-a11y": "^5.1.11",
    "@storybook/addon-backgrounds": "^5.1.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-options": "^5.3.21",
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@storybook/storybook-deployer": "^2.8.7",
    "@svgr/core": "^3.1.0",
    "@svgr/webpack": "^3.1.0",
    "autoprefixer": "^9.7.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.2.1",
    "babel-plugin-react-docgen": "^3.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "conventional-changelog-cli": "^2.1.1",
    "copy-to-clipboard": "^3.3.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.6.1",
    "focus-visible": "^5.2.0",
    "husky": "^1.3.1",
    "inter-ui": "^3.15.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-junit": "^6.3.0",
    "jest-styled-components": "^7.0.0-2",
    "junit-merge": "^2.0.0",
    "lint-staged": "^8.1.5",
    "npm-check": "^5.9.2",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "raf": "^3.4.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-popper": "^2.2.4",
    "react-storybook-addon-props-combinations": "^1.1.0",
    "regenerator-runtime": "^0.13.1",
    "resolve-url-loader": "^3.1.2",
    "storybook-addon-styled-component-theme": "^1.3.0",
    "styled-components": "^4.3.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10"
  },
  "resolutions": {
    "eslint-scope": "3.7.1"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest-junit": {
    "suiteName": "gm-ui-components",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx}",
      "!src/components/**/index.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "scripts/",
      "lib/",
      ".js.snap",
      ".stories.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/config/setupTests.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jestSetupTestFramework.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "\\.svg": "<rootDir>/config/svgMock.js",
      "inter-ui/inter.css": "<rootDir>/config/emptyModule.js"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  },
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(js|json)": [
      "npm run format --",
      "git add"
    ]
  }
}
